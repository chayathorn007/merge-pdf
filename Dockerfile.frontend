FROM --platform=linux/amd64 node:20

WORKDIR /app

# Copy package files
COPY package*.json ./

# Clean install to avoid architecture issues
RUN rm -rf node_modules package-lock.json
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"] 